<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TableLayout
        android:id="@+id/longest_tbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <TableRow 
            android:id="@+id/longest_current_row"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#BEC2C3">
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Player"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="0.5"
                android:background="#ffffff"
                android:layout_margin="1dip"/>
            <TextView
                android:id="@+id/longest_current_streak_text"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Current Streak"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_weight="0.5"
                android:background="#eda06d"
                android:clickable="true"
                android:layout_margin="1dip"/>
            
           <TextView
                android:id="@+id/longest_longest_streak_text"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Longest"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_weight="0.5"
                android:background="#f06000"
                android:clickable="false"
                android:layout_margin="1dip" />
                        
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Percentage"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:background="#ffffff"
                android:layout_margin="1dip" />
        </TableRow>
    </TableLayout>
    

</LinearLayout>
